<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_result_raw_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="raw data"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
            />

            <TextView
                    android:id="@+id/tv_result_organized_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="organized data"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"

            />
            <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HÃ¤ufigkeitsverteilungen"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"

            />


            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TableLayout
                        android:id="@+id/tl_result_page"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                </TableLayout>
            </HorizontalScrollView>

            <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lageparameter"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"

            />

        </LinearLayout>
    </ScrollView>
</LinearLayout>